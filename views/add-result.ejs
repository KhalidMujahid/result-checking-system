<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin Dashboard | Result Processing System</title>
    <link rel="stylesheet" href="../css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/font/css/all.min.css">
</head>

<body>
    <div class="header p-3 bg-secondary">
        <h1 class="text-white">Admin Dashboard</h1>
    </div>
    <div class="row">
        <div class="bg-secondary col-md-2 p-3" style="height:calc(100vh - 100px);overflow: hidden;">
            <a href="/admin/dashboard" class="btn btn-outline-light w-100 mt-2">Home <i class="fas fa-home"></i></a>
            <a href="/student/reg" class="btn btn-outline-light w-100 mt-2">Register student <i class="fas fa-user"></i>
            </a>
            <a href="/add/result" class="btn btn-light w-100 mt-2">Add result <i class="fas fa-plus"></i>
            </a>
            <a href="/students/all" class="btn btn-outline-light w-100 mt-2">View all students <i
                    class="fas fa-eye"></i>
            </a>
            <a href="/admin/about" class="btn btn-outline-light w-100 mt-2">About us <i class="fas fa-users"></i></a>
            <div class="mt-5 text-center text-white">
                <p>Powered by Hi-Tech</p>
                <p>&copy; 2022</p>
            </div>
        </div>
        <div class="col-md-10">
            <div class="container">
                <div>
                    <h1>Add Result</h1>
                </div>
                <div class="form-search mt-3">
                    <form action="/search" method="get">
                        <label for="">Select student</label>
                        <select name="student" class="form-select">
                            <% if(students.length) {%>
                                <% students.forEach(student=> {%>
                                    <option value="<%= student._id %>">
                                        <%= student.fname %>
                                            <%= student.lname %>
                                    </option>
                                    <%})%>
                                        <%}%>
                        </select>
                        <button type="submit" class="mt-3 btn btn-success">Get student <i
                                class="fas fa-arrow-right"></i></button>
                    </form>
                </div>
                <hr class="hr">
                <% if(message) {%>
                    <div class="alert alert-success">
                        <p>
                            <%= message %>
                        </p>
                    </div>
                    <%}%>
                        <!-- add result -->
                        <% if(form) {%>
                            <div class="my-3" style="height: 50vh;overflow-y:scroll; ">
                                <form class="border p-3" action="/add" method="post">
                                    <div>
                                        <div class="form-group my-2">
                                            <input type="text" class="form-control"
                                                value="<%= form.fname %> <%= form.lname %>" readonly>
                                        </div>
                                        <div class="form-group my-2">
                                            <input type="text" name="matnumber" class="form-control"
                                                value="<%= form.matnumber %>" readonly>
                                        </div>
                                        <div class="form-group my-2">
                                            <input type="text" class="form-control" value="<%= form.level %>" readonly>
                                        </div>
                                        <div class="form-group my-2">
                                            <input type="text" class="form-control" value="<%= form.dept %> " readonly>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="my-3">
                                                <h4>Select Courses</h4>
                                            </div>
                                            <% form.courses.forEach(f=> {%>
                                                <div class="my-2">
                                                    <div class="form-group">
                                                        <input name="course_code" type="text" value="<%= f %>"
                                                            class="form-control" readonly>
                                                    </div>
                                                </div>
                                                <%})%>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="my-3">
                                                <h4>Select Grade</h4>
                                            </div>
                                            <% form.courses.forEach(f=> {%>
                                                <div class="my-2">
                                                    <select name="course_grade" class="form-select">
                                                        <option>---Grade---</option>
                                                        <option value="A">A</option>
                                                        <option value="B">B</option>
                                                        <option value="C">C</option>
                                                        <option value="D">D</option>
                                                        <option value="E">E</option>
                                                        <option value="F">F</option>
                                                    </select>
                                                </div>
                                                <%})%>
                                        </div>
                                    </div>
                                    <div class="button-group mt-3">
                                        <button type="submit" class="btn btn-success">Add <i
                                                class="fas fa-plus"></i></button>
                                    </div>
                                </form>

                            </div>
                            <%} else {%>
                                <h1>No student selected</h1>
                                <%}%>
            </div>
        </div>
    </div>
</body>

</html>